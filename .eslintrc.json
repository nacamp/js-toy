{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [ "eslint:recommended", "airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "max-len": "off",
        "no-plusplus": 0,
        "no-param-reassign": 0
    },
    "globals": {
        "describe": true,
        "before": true,
        "after": true,
        "afterEach": true,
        "it": true
    }
}
